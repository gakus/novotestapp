<AuthorizeView>
    <Authorized>
        <div class="flex flex-wrap justify-around">
            <div class="max-w-sm rounded overflow-hidden shadow-lg m-4">
              <img class="w-full" src="/img/clock.jpg" alt="Sunset in the mountains">
              <div class="px-6 py-4">

@page "/apitests"

<div class="flex flex-wrap justify-around">
    <div class="max-w-2xl rounded overflow-hidden shadow-lg m-4">
        <img class="w-full" src="/img/code.jpg" alt="Sunset in the mountains">
        <div class="px-6 py-4">
            <div class="font-bold text-xl mb-2">Api tests</div>
            <p class="text-gray-700 text-base">
                Access swagger interface for api <br />
                <a href="http://novotestapi.germanywestcentral.azurecontainer.io/swagger/index.html" class="font-bold">novotestapi.germanywestcentral.azurecontainer.io/swagger/index.html</a><br />
                and write tests to <span class="text-green-600">GET{id}</span> enpoint and <span class="text-red-600">POST</span>
            </p>
            <p class="text-purple-900 font-semibold text-base pt-6">Oh and find a bug</p>
        </div>
        <div class="px-6 pt-4 pb-2">
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#request</span>
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#went</span>
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#after</span>
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#request</span>
        </div>
    </div>
    <!-- divider -->
</div>